{
  "name": "sirchnl-cl-commercelayer-react-checkout",
  "version": "3.0.0",
  "engines": {
    "node": "18.x"
  },
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "NODE_OPTIONS='--inspect' next dev",
    "build": "next build",
    "export": "next build && next export",
    "start": "next start -p $PORT",
    "lint": "eslint ./ --ext .js,.jsx,.tsx,.ts",
    "lint:fix": "eslint ./ --ext .tsx,.ts --fix",
    "test": "playwright test",
    "test:debug": "PWDEBUG=1 playwright test",
    "serve": "serve -l tcp://localhost:$PORT/ -n -s out/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/commercelayer/commercelayer-react-checkout.git"
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      [
        "@semantic-release/github",
        {
          "addReleases": "top"
        }
      ]
    ]
  },
  "author": {
    "name": "Matteo Alessani",
    "email": "matteo@commercelayer.io"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/commercelayer/commercelayer-react-checkout/issues"
  },
  "homepage": "https://github.com/commercelayer/commercelayer-react-checkout#readme",
  "keywords": [
    "reactjs",
    "nextjs",
    "jamstack",
    "headless",
    "ecommerce",
    "api",
    "checkout",
    "commercelayer"
  ],
  "dependencies": {
    "@commercelayer/react-components": "3.15.7",
    "@commercelayer/sdk": "^4.21.0",
    "@headlessui/react": "^1.7.7",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@types/async-retry": "1.4.3",
    "@types/node": "^17.0.40",
    "@types/react": "17.0.49",
    "@types/react-gtm-module": "^2.0.1",
    "@types/styled-components": "^5.1.25",
    "async-retry": "^1.3.3",
    "autoprefixer": "^10.4.13",
    "classnames": "^2.3.2",
    "i18next": "^21.10.0",
    "jwt-decode": "^3.1.2",
    "next": "^12.3.4",
    "next-i18next": "^12.1.0",
    "postcss": "^8.4.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-gtm-module": "^2.0.11",
    "react-i18next": "^11.18.6",
    "react-router-dom": "^6.6.2",
    "styled-components": "^5.3.6",
    "tailwindcss": "^3.2.4",
    "twin.macro": "2.8.2",
    "typescript": "^4.9.4"
  },
  "devDependencies": {
    "@commercelayer/js-auth": "^2.3.0",
    "@faker-js/faker": "^7.6.0",
    "@next/bundle-analyzer": "^12.3.4",
    "@next/eslint-plugin-next": "^12.3.4",
    "@playwright/test": "^1.29.2",
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.7",
    "@semantic-release/npm": "^9.0.2",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "dotenv": "^16.0.3",
    "eslint": "^8.23.1",
    "eslint-config-next": "^12.3.4",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.0",
    "eslint-plugin-tailwind": "^0.2.1",
    "prettier": "^2.8.3",
    "serve": "^14.1.2",
    "stylelint": "^14.16.1",
    "stylelint-config-standard": "^28.0.0"
  },
  "resolutions": {
    "@types/react": "17.0.49",
    "npm": "^8.18.0",
    "dset": "^3.1.2"
  },
  "babelMacros": {
    "twin": {
      "preset": "styled-components"
    }
  },
  "cacheDirectories": [
    ".next/cache"
  ]
}
